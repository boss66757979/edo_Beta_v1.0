.momo{
  height: 300rpx;
  width: 100%;
  border-left: none;
  border-right: none;
  display: flex;
  justify-content:space-evenly;
  align-items:center;
  transition: all 300ms ease;
}
.info_list{
	width:100%;
}
.cell-image-style{
	margin-bottom: 2px;
	margin-right: 10px;
	vertical-align: middle;
	width:20px; 
	height: 20px;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.userinfo-avatar[size] {
  width: 100rpx;
}
.userinfo-avatar:after {
  border: none;
}